#https://www.hackerrank.com/challenges/the-hurdle-race/problem?utm_campaign=challenge-recommendation&utm_medium=email&utm_source=24-hour-campaign

def hurdleRace(height, array):
    #sor_array=sorted(array, reverse=True)
    heighest=max(array)
    if height>=heighest:
        print('0')
    else:
        diff=heighest-height
        print(diff)

if __name__=='__main__':
    num= list(map(int, input().split()))
    height=num[-1]
    array=list(map(int, input().split()))
    hurdleRace(height, array)
    
