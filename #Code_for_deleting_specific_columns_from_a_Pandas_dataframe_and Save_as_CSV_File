#code for deleting specific (e.g., multicollinear that match with those in a list) columns from a pandas dataframe and save the updated dataframe as a csv file
def selecting_specific_columns(filename, lis): #taking the filepath of input file and the list of variables as the input
    df1=pd.read_csv(filename)  #reading the input file
    for col_head, col_value in df1.iteritems(): #iterating over columns and column values in the dataframe 
        if col_head not in lis: #the condition
            df1.drop(col_head, axis=1, inplace=True) #drop the columns, "inplace" is needed to make changes in the original dataframe
    df1.to_csv('F:\\DataFrame_2_for_PCA_Minus_Seance_MulticollinearsRemoved_7_thresh.csv', encoding='utf-8', index=False) #save the modified dataframe to a csv file

